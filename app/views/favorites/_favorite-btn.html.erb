<% if instructor.favorited_by?(current_user) %>
    <p>
        <%= link_to instructor_favorites_path(instructor), method: :delete, remote: true do %>
            ♥<%= instructor.favorites.count %> いいね
        <% end %>
    </p>
<% else %>
    <p>
        <%= link_to instructor_favorites_path(instructor), method: :post, remote: true do %>
            ♡<%= instructor.favorites.count %> いいね
        <% end %>
    </p>
<% end %>