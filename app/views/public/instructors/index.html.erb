            <!--    <div class="star-rating-back">★★★★★</div>-->
            <!--  </div>-->
            <!--  <div class="average-score-display ml-3 pt-2">-->
            <!--    <%#= instructor.avg_score %>点（<%#= instructor.reviews.count %>件のレビュー）-->
            <!--  </div>-->
            <!--</div>-->
            <p class="instructor-msg"><%= instructor.message %></p>
            </div>
          </div>
      <% end %>
    <% end %>
  </div>
</div>
