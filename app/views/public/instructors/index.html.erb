<div class="container">
  <div class="row justify-content: center">
    <% @instructors.each do |instructor| %>
      <%= link_to instructor_path(instructor) do %>
        <div class="col-md-4 box-shadow">
          <div class="instructor-box">
            <%= attachment_image_tag instructor.user, :profile_image, fallback: "no_image.jpg", class: "instructor-avatar" %>
            <div class="user-name">
              <%= instructor.user.name %>
              <span class="favorite-cnt">
                <span class="instructorbox_favorite_btn inlink">
                  <i class="not-favorite-icon fas fa-heart">
                    <%= instructor.favorites.count %>
                  </i>
                </span>
              </span>
            </div>
            <div class="instructor-info">
              <p class="far fa-user"><%= instructor.age %>歳</p>
            </div>
