<% if instructor.favorited_by?(current_user) %>
    <%= link_to instructor_favorite_path(instructor), method: :delete, remote: true do %>
        <i class="favorite-icon fas fa-heart">お気に入り</i>
    <% end %>
<% else %>
    <%= link_to instructor_favorites_path(instructor), method: :post, remote: true do %>
        <i class="not-favorite-icon far fa-heart">お気に入り</i>
    <% end %>
<% end %>