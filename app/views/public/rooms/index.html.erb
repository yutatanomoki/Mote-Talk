<div class="subtitle-wrap">
  <h2 class="subtitle"><span class="talk-room-link"><i class="icon far fa-comment"></i>トークルーム</span></h2>
</div>

<div class="contents">
  <div class="talk-room-list sub-header-mergin">
    <% @messages.each do |message| %>
      <%= link_to request_board_path(request_board) do %>
        <div class="talk-user clearfix">
          <p class="avatar">
            <%= attachment_image_tag request_board.user, :profile_image, fallback: "no_image.jpg" %>
          </p>
          <div class="latest-msg-box">
            <p class="talk-user-name"></p>
            <p class="latest-msg"></p>
          </div>
          <p class="msg-date">3月7日</p>
      <% end %>
    <% end %>
  </div>
</div>

