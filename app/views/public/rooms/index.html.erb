<div class="subtitle-wrap">
  <h2 class="subtitle"><span class="talk-room-link"><i class="icon far fa-comment"></i>トークルーム</span></h2>
</div>

<div class="contents">
  <div class="talk-room-list sub-header-mergin">
    <% @messages.each do |message| %>
      <%= link_to room_path(message) do %>
        <div class="talk-user clearfix">
          <p class="avatar">
            <%= attachment_image_tag message.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %>
          </p>
          <div class="latest-msg-box">
            <p class="talk-user-name"><%= message.user.name %></p>
            <p class="latest-msg"><%= message.message %></p>
          </div>
          <p class="msg-date"><%= message.created_at %></p>
      <% end %>
    <% end %>
  </div>
</div>
